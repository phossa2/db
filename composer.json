{
    "name": "phossa2/db",
    "license": "MIT",
    "type": "library",
    "description": "DB connection, management, statistics library for PHP.",
    "keywords": ["db", "phossa", "phossa2", "database"],
    "homepage": "https://github.com/phossa2/db",
    "authors": [
        {
            "name": "Hong Zhang",
            "homepage": "https://github.com/phossa2"
        }
    ],
    "require": {
        "php": "~5.4.0|~7.0.0",
        "phossa2/shared": "^2.0.25"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "2.*"
    },
    "autoload": {
        "psr-4": { "Phossa2\\Db\\": "src/Db/" }
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs --standard=psr2 src/",
        "format": "phpcbf --standard=psr2 src/"
    },
    "config": {
        "platform": {
            "php": "5.4.0"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        }
    },
    "archive": {
        "exclude": [ "!vendor", "tests", "composer.lock" ]
    }
}
